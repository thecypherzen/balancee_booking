{
  "extends": "@tsconfig/node22/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "./api",
    "noEmitOnError": true,
    "checkJs": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./api/*"]
    }
  },
  "include": ["./api/**/*"],
  "exclude": ["node_modules", "dist", ".resfile"]
}
